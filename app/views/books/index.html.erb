<h1>Books</h1>
<% @books.each do |book| %>
  <div>
    <%= link_to book_path(book.id) do %>
      <%= image_tag book.get_image %>
    <% end %>

    <p><%= image_tag book.user.get_ptofile_image(100,100) %></p>

    <p>Title</p>
    <span><%= link_to book.title, book_path(book.id) %></span>
    <p>Opinion</p>
  </div>


<% end %>