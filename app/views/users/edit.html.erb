<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info<h2>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>errors prohibited this objs from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @user do |f| %>
          <div class="form-group">
             <label for="user_name">Name</label>
             <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
          </div>
          <div class="form-group">
            <label for="inputImage">Image</label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
          <div class="form-group">
            <label fot="inputIntroduction">Introduction</label>
            <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update User" %>
          </div>
        <% end %>
    </div>
  </div>
</div>

