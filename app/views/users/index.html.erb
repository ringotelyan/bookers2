<div class="container">
  <div class="row">
  <%= render 'list', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>
              image
            </th>
            <th>
              name
            </th>
            <th colspan="3">

            </th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= image_tag user.get_profile_image(100,100) %>
          </td>
          <td>
            <p><%= user.name %></p>
          </td>
          <td>
            <%= link_to "Show", user_path(user) %>
          </td>

        </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>




